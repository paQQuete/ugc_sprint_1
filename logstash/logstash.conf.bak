input {
    beats {
        port => 5045
        host => "0.0.0.0"
        tags => ["nginx"]
        codec => "json"
      }
    gelf {
        port => 12201
    }
}
output {
  # Разделить логи разных приложений по разным индексам можно с помощью простого if-else
  if "nginx" in [tags] {
      elasticsearch {
        hosts => [ "${ES_HOST}" ]
        index => "nginx-%{+YYYY.MM.dd}"
      }
  } else if "fastapi" in [tags] {
      elasticsearch {
        hosts => [ "${ES_HOST}" ]
        index => "fastapi-%{+YYYY.MM.dd}"
      }
  }


  else {
      elasticsearch {
          hosts => [ "${ES_HOST}" ]
          index => "app-%{+YYYY.MM}"
      }
  }
}